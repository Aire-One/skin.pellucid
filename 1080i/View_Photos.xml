                    <height>2-row</height>
                    <align>center</align>
                    <aligny>center</aligny>
                    <font>buttonTitle</font>
                    <textcolor>textActive</textcolor>
                    <label>$INFO[ListItem.Property(Addon.Summary)]</label>
                </control>
                <control type="image">
                    <posx>0</posx>
                    <posy>0</posy>
                    <width>396</width>
                    <height>264</height>
                    <aspectratio>scale</aspectratio>
                    <texture border="0">$INFO[Listitem.thumb]</texture>
