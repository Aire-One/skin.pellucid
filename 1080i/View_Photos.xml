                        <effect type="zoom" start="95" end="110" center="auto" tween="back" easing="out" time="300"/>
                    </animation>
                    <control type="image">
                        <posx>0</posx>
                        <posy>0</posy>
                        <width>396</width>
                        <height>264</height>
                        <aspectratio>scale</aspectratio>
