                        <posx>114</posx>
                        <posy>row-5-begin</posy>
                        <width>6-col</width>
                        <orientation>horizontal</orientation>
                        <visible>!isempty(ListItem.PicturePath)</visible>
                        <control type="label">
                            <width>24</width>
                            <height>2-row</height>
                            <aligny>center</aligny>
                            <font>symbol</font>
                            <textcolor>textActive</textcolor>
