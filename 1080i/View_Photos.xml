                        <height>2-row</height>
                        <align>center</align>
                        <aligny>center</aligny>
                        <font>buttonTitle</font>
                        <textcolor>textActive</textcolor>
                        <label>$INFO[ListItem.Property(Addon.Summary)]</label>
                    </control>
